
<h2>Welcome back to the site <%= @user.username %></h2>

<ul>
  <% @user.squeaks.each do |squeak| %>
  <li>
    <%= form_tag("/squeaks/#{ squeak.id }", method: :delete) do %>
    <%= submit_tag "UnSqueak" %>
    <% end %>
    <%= squeak.message %>
  </li>
  <% end %>
</ul>
<%= form_tag('/log_out', method: :delete) do %>
  <% submit_tag "Log-Out" %>
  <% end %>

  <%= form_for @squeak do |f|%>
    <%= f.label :message %>
    <%= f.text_field :message %>
    <%= f.submit %>
  <% end %>

  <p>
    YOU ARE NOW SIGNED IN.....
  </p>
